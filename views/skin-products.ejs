<form action="/book-session" method="POST" style="max-width: 500px; margin: 20px auto; background: #222; padding: 30px; border-radius: 15px; border: 1px solid #d9f110; color: white;">
    <h2 style="color: #d9f110; text-align: center;">Select Your TFH Products</h2>
    
    <div style="display: flex; flex-direction: column; gap: 15px; margin-bottom: 25px;">
        <label style="display: flex; justify-content: space-between; cursor: pointer;">
            <span>Glow Oil</span>
            <input type="checkbox" name="treatments" value="TFH Glow Oil" style="width: 20px; height: 20px;">
        </label>
        <label style="display: flex; justify-content: space-between; cursor: pointer;">
            <span>Brightening Cream</span>
            <input type="checkbox" name="treatments" value="Brightening Cream" style="width: 20px; height: 20px;">
        </label>
    </div>

    <input type="text" name="name" placeholder="Full Name" required style="width:100%; padding:12px; margin-bottom:10px;">
    <input type="tel" name="phone" placeholder="Phone Number" required style="width:100%; padding:12px; margin-bottom:10px;">
    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px; margin-bottom: 20px;">
        <input type="date" name="date" required style="padding:10px;">
        <input type="time" name="time" required style="padding:10px;">
    </div>

    <button type="submit" style="width: 100%; padding: 15px; background: #d9f110; color: #1a1a1a; font-weight: bold; border: none; border-radius: 5px; cursor: pointer;">
        CONFIRM ORDER/BOOKING
    </button>
     <a href="/spa" class="back-link" style="display: block; margin-top: 25px; color: #555; font-size: 0.85rem; text-decoration: none; transition: 0.3s; text-align: center;" onmouseover="this.style.color='#d9f110'" onmouseout="this.style.color='#555'">
                <i class="fas fa-arrow-left"></i> Cancel and go back
            </a>
</form>