<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <title>Payment - TFH Lounge</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        /* Print-specific styling to ensure a clean receipt on paper */
        @media print {
            body { background: white !important; padding: 0 !important; }
            .main-header, .order-btn, .print-icon-wrapper, .back-link, footer {
                display: none !important;
            }
            .payment-card {
                border: none !important;
                box-shadow: none !important;
                padding: 0 !important;
                margin: 0 !important;
            }
            #printable-receipt {
                box-shadow: none !important;
                border: 1px solid #000 !important;
                width: 100% !important;
                color: black !important;
            }
        }
    </style>
</head>
<body style="background: #111; color: white; min-height: 100vh; display: flex; align-items: center; justify-content: center; padding: 20px; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
    
    <div class="container" style="max-width: 500px; width: 100%;">
        <div class="payment-card" style="background: #1a1a1a; padding: 40px; border-radius: 20px; border: 1px solid #d9f110; position: relative; box-shadow: 0 10px 30px rgba(0,0,0,0.5);">
            
            <div class="print-icon-wrapper" onclick="window.print()" style="position: absolute; top: 20px; right: 25px; color: #d9f110; cursor: pointer; text-align: center; transition: 0.3s;" onmouseover="this.style.transform='scale(1.1)'" onmouseout="this.style.transform='scale(1)'">
                <i class="fas fa-print" style="font-size: 1.5rem;"></i>
                <span style="font-size: 0.6rem; display: block; text-transform: uppercase; margin-top: 2px;">Print</span>
            </div>

            <h1 style="color: #d9f110; margin-bottom: 25px; text-transform: uppercase; letter-spacing: 2px; text-align: center; font-size: 1.5rem;">Make Payment</h1>

            <div id="printable-receipt" style="background: #fff; color: #000; padding: 30px; border-radius: 4px; margin-bottom: 25px; text-align: left; font-family: 'Courier New', Courier, monospace; box-shadow: inset 0 0 15px rgba(0,0,0,0.1); position: relative;">
                
                <div style="text-align: center; border-bottom: 2px dashed #000; padding-bottom: 10px; margin-bottom: 15px;">
                    <h2 style="margin: 0; font-size: 1.2rem; font-weight: 900;">TFH Juice Bar and Lounge</h2>
                    <p style="font-size: 0.75rem; margin: 5px 0;">Abuja, Nigeria</p>
                    <p style="font-size: 0.7rem; color: #555;" id="display-date"></p>
                </div>

                <div style="margin-bottom: 15px; font-size: 0.9rem;">
                    <p style="margin-bottom: 3px;"><strong>CUSTOMER:</strong> <span id="display-customer-name">...</span></p>
                    <p><strong>PHONE:</strong> <span id="display-phone">...</span></p>
                </div>

                <div style="border-bottom: 1px solid #ddd; padding-bottom: 10px; margin-bottom: 10px;">
                    <p style="font-size: 0.7rem; color: #888; text-transform: uppercase; margin-bottom: 5px;">Items Ordered:</p>
                    <p id="display-names" style="font-weight: bold; font-size: 0.85rem; line-height: 1.4; color: #111;">...</p>
                </div>

                <div style="display: flex; justify-content: space-between; margin-bottom: 5px; font-size: 0.9rem;">
                    <span>Subtotal:</span>
                    <span>₦<span id="display-subtotal">0</span></span>
                </div>
                <div style="display: flex; justify-content: space-between; margin-bottom: 10px; border-bottom: 1px solid #ddd; padding-bottom: 10px; font-size: 0.9rem;">
                    <span>VAT (7.5%):</span>
                    <span>₦<span id="display-vat">0</span></span>
                </div>

                <div style="display: flex; justify-content: space-between; align-items: center; font-size: 1.3rem; font-weight: 900; color: #000;">
                    <span>TOTAL:</span>
                    <span>₦<span id="display-total">0</span></span>
                </div>
                
                <div style="margin-top: 20px; text-align: center; font-size: 0.7rem; color: #777;">
                    *** THANK YOU FOR YOUR PATRONAGE ***
                </div>
            </div>

            <div style="background: rgba(217, 241, 16, 0.05); padding: 15px; border-radius: 10px; border: 1px dashed var(--lemon); margin-bottom: 20px; text-align: left;">
                <p style="font-size: 0.7rem; color: #888; margin-bottom: 5px;">Account Details:</p>
                <p style="color: white; font-weight: bold; font-size: 0.9rem;">MoniePoint | 0563690471</p>
            </div>

            <a id="wa-confirm" href="#" class="order-btn" style="display: block; background: #d9f110; color: #000; padding: 18px; text-decoration: none; font-weight: 900; border-radius: 10px; transition: 0.3s; text-transform: uppercase; letter-spacing: 1px; text-align: center;">
                <i class="fab fa-whatsapp" style="margin-right: 10px; font-size: 1.2rem;"></i> Send Receipt
            </a>
            
            <a href="/lounge" class="back-link" style="display: block; margin-top: 25px; color: #555; font-size: 0.85rem; text-decoration: none; transition: 0.3s; text-align: center;" onmouseover="this.style.color='#d9f110'" onmouseout="this.style.color='#555'">
                <i class="fas fa-arrow-left"></i> Cancel and go back
            </a>
        </div>
    </div>

    <script>
        window.onload = function() {
            // 1. Extract Details from URL
            const params = new URLSearchParams(window.location.search);
            const name = params.get('name') || "Valued Customer";
            const phone = params.get('phone') || "N/A";
            const items = params.get('items') || "No items selected";
            const rawTotal = params.get('total') || "0";
            
            const subtotal = parseFloat(rawTotal.replace(/,/g, '')) || 0;
            const vatAmount = subtotal * 0.075;
            const grandTotal = subtotal + vatAmount;

            // 2. Set Date & Time
            const now = new Date();
            document.getElementById('display-date').innerText = now.toLocaleString();

            // 3. Update Receipt UI
            document.getElementById('display-customer-name').innerText = name.toUpperCase();
            document.getElementById('display-phone').innerText = phone;
            document.getElementById('display-names').innerText = items;
            document.getElementById('display-subtotal').innerText = subtotal.toLocaleString();
            document.getElementById('display-vat').innerText = vatAmount.toLocaleString();
            document.getElementById('display-total').innerText = grandTotal.toLocaleString();

            // 4. WhatsApp Link Generation
            const message = encodeURIComponent(
                `*OFFICIAL RECEIPT - TFH LOUNGE*\n` +
                `--------------------------\n` +
                `*Customer:* ${name}\n` +
                `*Phone:* ${phone}\n` +
                `*Items:* ${items}\n` +
                `--------------------------\n` +
                `*Subtotal:* ₦${subtotal.toLocaleString()}\n` +
                `*VAT (7.5%):* ₦${vatAmount.toLocaleString()}\n` +
                `*GRAND TOTAL:* ₦${grandTotal.toLocaleString()}\n` +
                `--------------------------\n\n` +
                `_Payment made via Transfer. Attached is the proof._`
            );

            const btn = document.getElementById('wa-confirm');
            if (btn) {
                btn.href = `https://wa.me/2348164192338?text=${message}`;
                
                // Hover Effects
                btn.onmouseover = () => { 
                    btn.style.transform = 'scale(1.02)'; 
                    btn.style.boxShadow = '0 0 20px rgba(217, 241, 16, 0.4)'; 
                };
                btn.onmouseout = () => { 
                    btn.style.transform = 'scale(1)'; 
                    btn.style.boxShadow = 'none'; 
                };
            }
        };
    </script>
</body>
</html>