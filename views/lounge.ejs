    <script>
    const checkboxes = document.querySelectorAll('.menu-check');
    const displayTotal = document.getElementById('display-total');
    const displayNames = document.getElementById('display-names');
    const orderForm = document.getElementById('final-lounge-order');

    function updateSummary() {
        let total = 0;
        let selectedNames = [];
        checkboxes.forEach(box => {
            if (box.checked) {
                total += parseInt(box.getAttribute('data-price'));
                selectedNames.push(box.getAttribute('data-name'));
            }
        });
        displayTotal.innerText = total.toLocaleString();
        displayNames.innerText = selectedNames.length > 0 ? selectedNames.join(', ') : "None";
    }

    checkboxes.forEach(box => box.addEventListener('change', updateSummary));

   // Order Form Submission Logic
// Order Form Submission Logic
orderForm.addEventListener('submit', function(e) {
    // 1. Get the values, but REMOVE the comma from the total
    const totalRaw = document.getElementById('display-total').innerText.replace(/,/g, '');
    const itemsVal = document.getElementById('display-names').innerText;

    // 2. Validation
    if (totalRaw === "0" || itemsVal === "None") {
        e.preventDefault();
        alert("Please select at least one item!");
        return;
    }

    // 3. Force-inject the values into the hidden fields
    document.getElementById('input-total').value = totalRaw;
    document.getElementById('input-items').value = itemsVal;

    console.log("Submitting items to dashboard: " + itemsVal);
});

    // Video Playlist Logic stays the same
    const player = document.getElementById('loungePlayer');
    const source = document.getElementById('loungeSource');

    const tfhPlaylist = [
        "/images/lounge.mp4", 
        "/images/lounge-tour.mp4"  
    ];

    let currentTrack = 0;

    player.onended = function() {
        currentTrack++;

        if (currentTrack >= tfhPlaylist.length) {
            currentTrack = 0;
        }

        source.src = tfhPlaylist[currentTrack];
        player.load();
        player.play();
        
        console.log("Switching to: " + tfhPlaylist[currentTrack]);
    };
</script>
