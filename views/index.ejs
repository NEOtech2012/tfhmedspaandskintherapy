                    <div class="stars">â˜…â˜…â˜…â˜…â˜…</div>
                    <p>"Very clean environment and the lemon-themed decor is beautiful."</p>
                    <span class="author">- Joy O.</span>
                </div>
            </div>
        </div>
    </section>

    <section class="reviews-display">
        <div class="container">
            <h2 class="section-title">Latest Reviews</h2>
            <div class="reviews-grid">
                <% if (typeof reviews !== 'undefined' && reviews.length > 0) { %>
                    <% reviews.forEach(function(review) { %>
                        <div class="review-card">
                            <div class="stars">
                                <% for(let i=0; i < review.rating; i++) { %> â˜… <% } %>
                            </div>
                            <p>"<%= review.message %>"</p>
                            <h4 class="client-name">- <%= review.name %></h4>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p>No reviews yet. Be the first to leave one!</p>
                <% } %>
            </div>
        </div>
    </section>

    <section class="submit-review-section">
        <div class="container">
            <h2 class="section-heading">Leave a Review</h2> 
            <p>Tell us about your experience at TFH MedSpa and skin therapy</p>
            <form action="/submit-review" method="POST" class="review-form">
                <input type="text" name="name" placeholder="Your Name" required>
                <select name="rating" required>
                    <option value="5">5 Stars</option>
                    <option value="4">4 Stars</option>
                    <option value="3">3 Stars</option>
                    <option value="2">2 Stars</option>
                    <option value="1">1 Stars</option>
                </select>
                <textarea name="message" placeholder="Your experience..." required></textarea>
                <button type="submit" class="submit-btn">POST REVIEW</button>
            </form>
        </div>
    </section>

    <%- include('partials/footer') %>

    <script>
        let currentSlide = 0;
        const slides = document.querySelectorAll('.slide');

        function moveSlide(n) {
            slides[currentSlide].classList.remove('active');
            currentSlide = (currentSlide + n + slides.length) % slides.length;
            slides[currentSlide].classList.add('active');
        }

        setInterval(() => moveSlide(1), 5000);

       const menuBtn = document.querySelector('.menu-toggle');
        const navMenu = document.querySelector('.nav-links');

        menuBtn.addEventListener('click', () => {
            navMenu.classList.toggle('active');
        });
    </script>

</body>
</html>