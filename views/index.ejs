    <section class="testimonials-area">
        <div class="content-wrapper">
            <h2 class="main-title">Satisfied Customers</h2>
            <div class="testimonials-row">
                <div class="testimonial-item">
                    <div class="stars">â˜…â˜…â˜…â˜…â˜…</div>
